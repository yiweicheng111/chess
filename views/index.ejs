<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chess.com</title>
</head>
<style>
    *{
        font-family: Arial, Helvetica, sans-serif;
    }
    body{
        background: linear-gradient(to top, rgb(0,0,0), rgb(50,50,50));
        display: flex;
        flex-direction: row;
    }
    #options{
        display: flex;
        flex-direction: column;
        gap: 1px;
        flex-shrink: 0;
        max-width: 40%;
    }
    #options-visualized{
        justify-self: flex-end;
        margin-left: 20px;
    }
    #options-visualized a img{
        aspect-ratio: 1;
        height: 30%;
    }
    #options-visualized a{
        text-decoration: none;
        color: white;
    }
</style>
<body>
    <div id="options">
        <button id="play">Play new game</button>
        <button id="play-puzzle">Play puzzle</button>
        <button id="play-bots">Play bots</button>
    </div>
    <div id="options-visualized">
        <a href="bro"><img src="https://images.chesscomfiles.com/uploads/v1/images_users/tiny_mce/JasonCarnage/php3mF9cO.jpeg"><h2>puzzles</h2></a>
        <a href="bro"><img src="https://images.chesscomfiles.com/uploads/v1/images_users/tiny_mce/JasonCarnage/php3mF9cO.jpeg"><h2>reivew last game</h2></a>
        <a href="bro"><img src="https://images.chesscomfiles.com/uploads/v1/images_users/tiny_mce/JasonCarnage/php3mF9cO.jpeg"><h2>electornnegiativity</h2></a>
    </div>
    <script>
        const playbtn = document.getElementById("play");
        playbtn.onclick = function(){
            fetch("/create_game",{method:"GET"}).then(res=>res.json()).then(data=>{window.location.href = `/game/${data["id"]}`});
        }
    </script>
</body>
</html>